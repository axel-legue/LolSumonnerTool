<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_component_s">


    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/image_node_item_width"
        android:layout_height="@dimen/image_node_item_height"
        android:layout_marginEnd="@dimen/margin_component_s"
        android:contentDescription="@string/content_description_item_image"
        tools:srcCompat="@tools:sample/avatars[2]" />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_item"
        tools:text="The LightBringer" />

    <TextView
        android:id="@+id/tv_item_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_name"
        android:layout_toEndOf="@+id/iv_item"
        tools:text="2350g(350g)" />
</RelativeLayout>