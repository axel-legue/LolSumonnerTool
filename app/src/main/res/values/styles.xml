<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="champion_adapter_card">
        <item name="android:layout_margin">@dimen/margin_component_n</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- START HARMONIZE THESES STYLES -->
    <style name="champion_adapter_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_1_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="champion_adapter_image">
        <item name="android:contentDescription">@string/content_description_champion_image</item>
    </style>

    <style name="item_adapter_card">
        <item name="android:layout_margin">@dimen/margin_component_n</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_adapter_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_1_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mastery_adapter_card">
        <item name="android:layout_margin">@dimen/margin_component_n</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="mastery_adapter_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_1_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="summoner_spell_adapter_card">
        <item name="android:layout_margin">@dimen/margin_component_n</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="summoner_spell_adapter_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_1_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- END HARMONIZE THESES STYLES -->

    <!-- TEXT Styles-->
    <style name="big_title_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/title_1_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="title_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/title_2_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="subtitle_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/title_3_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="big_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_1_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="default_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_2_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="small_text">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/body_3_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
